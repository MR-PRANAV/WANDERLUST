<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
        <div class="col-6 offset-3">
                <h4>Sign Up on WanderLust</h4>
                <br>
                <form action="/signup" method="post"  class="needs-validation" novalidate>
                        <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" name="username" id="username" required>
                                <div class="invalid-feedback">Enter valid username</div>
                        </div>
                        <br>
                        <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="email" required>
                        </div>
                        <br>
                        <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" id="password" required>
                               
                        </div>
                        <button class="btn btn-success">SignUp</button>
                </form>
                <a class="nav-link" href="/login" style="margin:20px 0px 0px -10px">
                        Already have an account? <b style="color: rgba(255, 129, 70, 0.69);">Log in</b>
                </a>
                <br><br><br><br><br><br><br><br><br>
        </div>
</div>